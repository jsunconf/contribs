<div class="hero-unit">
  <h2 class="title"><%- contrib.title %></h2>
</div>

<h2><%= contrib.title %></h2>
<div class="row">
  <div class="span8">
    <p>
      <%= contrib.description %>
    </p>
    <p>
      This <strong>contribution</strong> is by <strong><%= contrib.contributor %></strong>
    <p>
    <p>
      <span id="votes"><%= contrib.karmas && contrib.karmas.length || 0 %></span> Votes
    <p>
    <% if (contrib.interest) { %>
    <p>
      This is a response to the request <%- contrib.interest.title %> from <%- contrib.interest.prospect %>
    </p>
    <% } %>
  </div>
  <div class="span4">
    <a id="vote-for-link" data-contrib-id="<%- contrib.id %>" style="font-size: 36px;" href="javascript:">&hearts; vote</a>
    <div id="thanks-voted" class="hidden">Thanks for your vote!</div>
  </div>
</div>
